<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="com.naukma.cleaning.services.loggingService.CleaningLayout" />
        </encoder>
    </appender>

        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>logs/myapp.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>logs/myapp.%d{yyyyMMddHHmm}.log</fileNamePattern>
                <maxHistory>60</maxHistory> <!-- Number of past log files to keep -->
            </rollingPolicy>
            <encoder>
                <pattern>%d [%thread] %-5level %logger{35} - %msg%n</pattern>
            </encoder>
        </appender>

    <logger name="com.naukma.cleaning" level="DEBUG">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE" />
    </logger>

</configuration>